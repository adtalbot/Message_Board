<h1>{{text}}</h1>

{{#if isEditing}}
  <form>
    <div class='form-group'>
      <label for='text'>Question</label>
      {{textarea value=text id='text' class='form-control'}}
    </div>

    <div class='form-group'>
      <label for='user_name'>User Name</label>
      {{input value=user_name id='user_name' class='form-control' rows='8'}}
    </div>

    <button class='btn' {{action 'save'}}>Save</button>
  </form>

{{else}}
  <p>{{user_name}}</p>

  <button class='btn' {{action 'edit'}}>Edit</button>
  <button class='btn' {{action 'delete'}}>Delete</button>

{{/if}}

<h2>Answers</h2>

{{#each answers}}
<p>{{text}}</p>
{{/each}}

<p>{{#link-to 'new-answer' this class='btn btn-default'}}New Answer{{/link-to}}</p>

{{outlet}}
