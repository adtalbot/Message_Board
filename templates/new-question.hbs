<h1>New Question</h1>

<form>
  <div class='form-group'>
    <label for='text'>Question</label>
    {{textarea id='text' class='form-control' value=text}}
  </div>

  <div class='form-group'>
    <label for='user_name'>User Name</label>
    {{input id='user_name' class='form-control' rows='15' value=user_name}}
  </div>
  <button class='btn btn-primary' {{action 'save'}}>Save</button>
</form>
